	signingkey = 09502A2D
[commit]
	gpgsign = true
[core]
	autocrlf = input
	eol = ef
	editor = vim
	ignorecase = false
[rerere]
	enabled = true
[log]
	date = relative
[format]
	pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(12,trunc)%ad %C(auto,green)%<(7,trunc)%aN%C(auto,reset)%s%C(auto,red)% gD% D
[difftool]
	prompt = false
[pull]
	pull = rebase
