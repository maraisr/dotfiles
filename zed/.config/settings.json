{
	"projects_online_by_default": false,
	"theme": "Ayu Dark",
	"buffer_font_size": 15,
	"buffer_font_family": "TX-02",
	"buffer_font_features": {
		"zero": true,
		"ss02": true,
		"ss03": true,
		"ss08": true,
		"ss10": true,
		"ss11": true
	},

	// ~ Behaviors
	"show_signature_help_after_edits": true,
	"show_completions_on_input": true,
	"remove_trailing_whitespace_on_save": true,
	"ensure_final_newline_on_save": true,
	"use_on_type_format": true,
	"format_on_save": "off",
	"formatter": "auto",
	"autosave": "on_focus_change",
	"cursor_shape": "block",
	"vim_mode": false,
	"relative_line_numbers": false,

	// ~ Code Style
	"hard_tabs": true,
	"tab_size": 4,
	"preferred_line_length": 120,
	"show_whitespaces": "all",
	"show_wrap_guides": true,
	"wrap_guides": [80, 120],
	"indent_guides": { "enabled": true, "coloring": "indent_aware" },

	// ~ Assistance
	"agent": {
		"version": "2",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-7-sonnet-thinking-latest"
		}
	},

	"languages": {
		"YAML": {
			"hard_tabs": false,
			"tab_size": 2
		},
		"C++": {
			"hard_tabs": false
		}
	},

	"git": {
		"inline_blame": { "enabled": false }
	},

	"language_servers": ["!vscode-css-language-server", "!tailwindcss-language-server", "..."],

	"terminal": {
		"env": {
			"EDITOR": "zed --wait"
		}
	},

	// ~ UI
	"toolbar": {
		"quick_actions": false
	},
	"tab_bar": {
		"show_nav_history_buttons": false
	},
	"project_panel": {
		"button": true,
		"dock": "right",
		"git_status": true
	},
	"outline_panel": {
		"dock": "right"
	},
	"collaboration_panel": {
		"dock": "left"
	},
	"notification_panel": {
		"dock": "left"
	},
	"chat_panel": {
		"dock": "left"
	},
	"inlay_hints": {
		"enabled": false
	}
}
